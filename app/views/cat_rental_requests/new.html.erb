<form action="<%= cat_rental_requests_url %>" method="post">
	<label for="cat_id">Cat:</label>
	<select id="cat_id" name="cat_rental_request[cat_id]">
		<% @cats.each do |cat| %>
			<option value="<%= cat.id %>"><%= cat.name %></option>
		<% end %>
	</select>
	<br>

	<label for="start_date">Start Date:</label>
	<input type="date" id="start_date" name="cat_rental_request[start_date]" value="<%= @request.start_date %>">
	<br>

	<label for="end_date">End Date:</label>
	<input type="date" id="end_date" name="cat_rental_request[end_date]" value="<%= @request.end_date %>">
	<br>

	<input type="submit" name="Request rental">
</form>